
@{
    ViewBag.Title = "Index";
}

<h2>Filtrar Professores</h2>
<form method="get">
    <div class="form-group">
        @Html.Label("Ano", "Ano", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Ano", null, "Selecione o Ano", htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Semestre", "Semestre", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Semestre", null, "Selecione o Semestre", htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("CodigoCurso", "Curso", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("CodigoCurso", null, "Selecione o Curso", htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <button type="submit" name="Filtrar" class="btn btn-primary">Filtrar</button>

</form>
<br />

<table class="table">
    <tr>
        <th>
            Ano
        </th>
        <th>
            Semestre
        </th>
        <th>
            Curso
        </th>
        <th>
            Professor
        </th>
        <th>
            Creditos
        </th>
    </tr>

    @foreach (MagisterFluentAPI.Models.ListaProfessor item in ViewBag.Lista)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semestre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCurso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeProfessor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCredito)
            </td>
        </tr>
    }

</table>
